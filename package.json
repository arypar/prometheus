{
  "name": "prometheus",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -n app,api,worker -c cyan,green,yellow \"npm run dev:app\" \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:app": "npm run dev --workspace=app",
    "dev:api": "npm run dev:api --workspace=backend",
    "dev:worker": "npm run dev:worker --workspace=backend",
    "build:app": "npm run build --workspace=app",
    "build:backend": "npm run build --workspace=backend",
    "build": "npm run build:backend && npm run build:app"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
